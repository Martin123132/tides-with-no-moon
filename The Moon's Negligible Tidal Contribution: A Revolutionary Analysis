europa_amplitude = mbt_tidal_spectrum(frequencies_europa, europa_rotation)

# Expected Europa tidal frequencies
europa_tides = {
    "Primary Europa Tide": 1.0/europa_rotation,      # 1 cycle per Europa day
    "Semi-Europa Tide": 2.0/europa_rotation,         # 2 cycles per Europa day  
    "Sub-Europa Tide": 0.5/europa_rotation           # 0.5 cycles per Europa day
